<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="br.com.example.model.avaliacao">
	<namespace>DESAFIO</namespace>


	<entity name="Avaliacao" local-service="true" remote-service="false">

		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<column name="avaliacaoId" type="long" primary="true" />
		<column name="funcionarioId" type="long" />
		<column name="dataAvaliacao" type="Date" />
		<column name="periodoDesafio" type="int" />
		<column name="observacoesGerais" type="String" />
		<column name="areaAtuacao" type="int" />

		<finder name="FuncionarioId" return-type="Collection">
			<finder-column name="funcionarioId" />
		</finder>

		<!-- Busca o ciclo específico de um funcionário - deve ser único por regra de negócio -->
		<finder name="FuncionarioIdPeriodoDesafio" return-type="Avaliacao" unique="true">
			<finder-column name="funcionarioId" />
			<finder-column name="periodoDesafio" />
		</finder>

		<finder name="PeriodoDesafio" return-type="Collection">
			<finder-column name="periodoDesafio" />
		</finder>


		<finder name="AreaAtuacao" return-type="Collection">
			<finder-column name="areaAtuacao" />
		</finder>

	</entity>

	<entity name="AvaliacaoDetalhe" local-service="true" remote-service="false">

		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<column name="userId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<column name="avaliacaoDetalheId" type="long" primary="true" />
		<column name="avaliacaoId" type="long" />
		<column name="tipoAvaliador" type="int" />
		<column name="nomeAvaliador" type="String" />
		<column name="observacoesAvaliador" type="String" />
		<column name="desempenho" type="int" />


		<finder name="AvaliacaoId" return-type="Collection">
			<finder-column name="avaliacaoId" />
		</finder>

		<finder name="TipoAvaliador" return-type="Collection">
			<finder-column name="tipoAvaliador" />
		</finder>

		<finder name="Desempenho" return-type="Collection">
			<finder-column name="desempenho" />
		</finder>

		<!-- Busca a avaliação específica de um avaliador para um ciclo - deve ser único -->
		<finder name="AvaliacaoIdTipoAvaliador" return-type="AvaliacaoDetalhe" unique="true">
			<finder-column name="avaliacaoId" />
			<finder-column name="tipoAvaliador" />
		</finder>


	</entity>
</service-builder>